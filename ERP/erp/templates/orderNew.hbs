<script type="text/x-handlebars" data-template-name="orders/new">
    <h2 class="ui header">
        <i class="pencil icon"></i>

        <div class="content">
            订单管理
            <div class="sub header">开单</div>
        </div>
    </h2>
    {{product-search products=model orderList=orderList}}


    <table class="ui table seven column">
        <thead>
        <tr>
            <th>ID</th>
            <th>品牌</th>
            <th>型号</th>
            <th>价格(分)</th>
            <th>货期(天)</th>
            <th>库存</th>
            <th>单位</th>
        </tr>
        </thead>
        <tbody>
        {{#each orderList}}
            <tr>
                <td>{{id}}</td>
                <td>{{brand}}</td>
                <td>{{pattern}}</td>
                <td>{{price}}</td>
                <td>{{deadline}}</td>
                <td>{{sku}}</td>
                <td>{{unit}}</td>
            </tr>
        {{/each}}
        </tbody>
        <tfoot></tfoot>
    </table>
    <div class="ui form segment">
        <div class="two fields">
            {{form-field label="手机号" placeholder="手机号" value=phone errorMessage="手机号不能为空" icon="mobile"
            error=phoneError}}
            <label>姓名</label>
            <div class="field">
                <div class="ui left labeled icon input">
                    {{input type="text" placeholder="姓名" value=name}}
                    <i class="icon user"></i>
                </div>
            </div>
        </div>
        <div class="field">
            <label>公司名称</label>
            <div class="field">
                <div class="ui left labeled icon input">
                    {{input type="text" placeholder="公司名称" value=corp}}
                    <i class="icon building"></i>
                </div>
            </div>
        </div>
        <div class="inline field">
            <div class="ui checkbox">
                <input type="checkbox">
                <label>I agree to the Terms and Conditions</label>
            </div>
        </div>
        <div class="ui blue submit button">Submit</div>
    </div>

</script>