<script type="text/x-handlebars" data-template-name="products/index">
    <div class="ui secondary  menu">
        <div class="right menu">
            <div class="item">
                <div class="ui icon input">
                    {{input placeholder="搜索..." type="text" value=search}}
                    <i class="search link icon"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="ui grid four column stackable">
        {{#each product in filteredProducts}}
            <div class="column">
                {{#link-to 'product' product tagName="div" class="ui segment mouse raised"}}
                    <img {{bind-attr src=product.cover}} class="ui medium image">
                    <div style="float: left;">最后修改时间:</div>
                    <div style="float: right;">{{format-date product.modifiedDate}}</div>
                {{/link-to}}
            </div>
        {{/each}}
    </div>
</script>

